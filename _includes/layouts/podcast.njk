{% extends "layouts/base.njk" %}

{% block content %}
	<div class="row">
		<div class="col-sm-2">
			<figure>
				<img src="{{ image }}" alt="" class="img-responsive thumbnail" />
			</figure>
		</div>
		{%- if longDescription -%}
		<div class="col-sm-10">
			{{ longDescription | markdownify | safe }}
			<p><strong>{{ podcasts[locale].durationText }}</strong> {{ duration }}</p>
		</div>
		{% endif %}
	</div>
	<figure class="wb-mltmd mrgn-bttm-md">
		<audio title="{{ title | safe }}">
			<source src="{{ mp3Link }}" type="audio/mp3">
			{%- if oggLink -%}
			<source src="{{ oggLink }}" type="audio/ogg">
			{%- endif -%}
		</audio>
	</figure>
	<details>
		<summary>{{ podcasts[locale].transcriptionText }} {{ title | safe }}</summary>
		{{ content | safe }}
	</details>
	<p class="mrgn-tp-lg lead"><a href="{{ mp3Link }}">{{ podcasts[locale].downloadText }} {{ title | safe }} (MP3, $SIZE<abbr title="{{ download[locale].MB }}">MB</abbr>)</a></p>
	{%- if oggLink -%}
		<p class="mrgn-tp-lg lead"><a href="{{ oggLink }}">{{ podcasts[locale].downloadText }} {{ title | safe }} (OGG, $SIZE<abbr title="{{ download[locale].MB }}">MB</abbr>)</a></p>
	{%- endif -%}

{% endblock %}
