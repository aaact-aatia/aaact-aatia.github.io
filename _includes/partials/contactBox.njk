{%- endif -%}

{%- endif -%}

{%- if emailAddress -%}
<p class="mt-4 well">
	<i class="fas fa-envelope fa-lg mr-2" aria-hidden="true"></i>
	{{ message | safe }}
	<a href="mailto:{{ emailAddress }}?subject={{ emailSubject | urlEncode }}">
		{{ emailAddress }}
	</a>
</p>
{%- endif -%}
