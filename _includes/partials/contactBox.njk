{%- if locale == "en" -%}
{%- set emailSubject = "Email about " ~ footer.contextualFooterContact[locale].learning.text -%}
{%- set message = "Contact us for more information about <strong>" ~ footer.contextualFooterContact[locale].learning.text ~ "</strong> at our email: " -%}
