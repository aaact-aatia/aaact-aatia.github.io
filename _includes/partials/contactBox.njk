{%- set emailAddress = "" -%}
{%- set emailSubject = "" -%}
{%- set message = "" -%}

{%- if tags and "podcasts" in tags -%}
{%- set emailAddress = footer.contextualFooterContact[locale].learning.email -%}

{%- if locale == "en" -%}
{% set subject = "Accessible Horizons podcast" %}
